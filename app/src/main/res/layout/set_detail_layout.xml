<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">

   <include layout="@layout/toolbar"></include>
    <!--体检套餐详情-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/set_pic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            tools:src="@drawable/set_pic"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/set_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                tools:text="项目2......"
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/set_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                tools:text="¥10000元"
                android:textSize="18sp"
                android:textColor="#de0e00"/>

            <TextView
                android:id="@+id/appointment_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                tools:text="已预约人数"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/healthtest_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                tools:text="该体检描述2:"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                tools:text="套餐详情:"
                android:textSize="18sp"
                android:textColor="#000">
            </TextView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/set_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000" />
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/setorder_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立刻预约"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@color/colorPrimary"/>

</LinearLayout>
