<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/medical_page"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="?android:attr/actionBarSize"
            app:contentScrim="@color/medical_page"
            app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed|exitUntilCollapsed"
            app:statusBarScrim="@color/medical_page"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="医院详情">

            <ImageView
                android:id="@+id/hospital_detail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:transitionName="image"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#00aaaaaa"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="名称："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="英文名："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/english_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="类别："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="等级:"
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="地址："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="概要："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="规模："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_scale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="历史："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="科室情况："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_department_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="医疗团队："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_medical_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_padding"
                android:text="医疗设备："
                android:textSize="@dimen/text_size"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/hospital_medical_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hospital_text_bg"
                android:padding="@dimen/text_padding"
                android:text="暂无" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>