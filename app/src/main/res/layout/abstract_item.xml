<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abstract_item__layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#ccc"
    android:orientation="horizontal"
    >

    <ImageView
        android:padding="2dp"
        android:id="@+id/abstract_item__img"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        tools:src="@mipmap/ic_launcher_round"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:padding="5dp"
        >


        <TextView
            android:id="@+id/abstract_item__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/abstract_item__summary"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="This is summary of health info article"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/abstract_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2017-07-19"
            android:layout_gravity="end"
            />
    </LinearLayout>
</LinearLayout>