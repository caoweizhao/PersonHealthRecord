<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/health_check_item_package_itemId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="@dimen/card_view_margin_vertical"
    android:layout_marginLeft="@dimen/card_view_margin_horizontal"
    android:layout_marginRight="@dimen/card_view_margin_horizontal"
    android:layout_marginTop="@dimen/card_view_margin_vertical"
    app:cardCornerRadius="@dimen/card_corner"
    app:cardElevation="@dimen/card_view_elevation"
    >

    <LinearLayout
        android:id="@+id/health_check_item__layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/health_check_item__img"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher_round"
            android:transitionName="image"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:padding="5dp"
            >


            <TextView
                android:id="@+id/health_check_item__title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:transitionName="title"
                tools:text="Title"
                />

            <TextView
                android:id="@+id/health_check_item__summary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="This is summary of health info article"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/holo_red_dark"
                    android:id="@+id/health_check_item_money"
                    android:text="￥10000元"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/health_check_item_reserve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:text="已预约800" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

