<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <com.example.administrator.personhealthrecord.view.WaveImageView
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/runing"
        android:id="@+id/manual_evaluate_iamge_score"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:clipChildren="false"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">
                <!--身高-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="身高"
                        >

                        <EditText
                            android:id="@+id/edit_tall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:numeric="integer"
                            android:paddingLeft="@dimen/text_padding"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="厘米"
                        android:textSize="@dimen/text_size"
                        />
                </LinearLayout>

                <!--体重-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="体重"
                        >

                        <EditText
                            android:id="@+id/edit_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:numeric="integer"
                            android:paddingLeft="@dimen/text_padding"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="KG"
                        android:textSize="@dimen/text_size"
                        />
                </LinearLayout>

                <!--血型-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/blood_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="@string/blood_type"
                        android:textSize="@dimen/text_size"/>

                    <Spinner
                        android:id="@+id/blood_type_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:entries="@array/blood_type">
                    </Spinner>
                </LinearLayout>

                <include layout="@layout/divider_view"/>

                <!--心率-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="心率"
                        >

                        <EditText
                            android:id="@+id/edit_heart_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:numeric="integer"
                            android:paddingLeft="@dimen/text_padding"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="bpm"
                        android:textSize="@dimen/text_size"
                        />
                </LinearLayout>

                <!--血压-收缩压-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/blood_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="@string/blood_pressure"
                        android:textSize="@dimen/text_size"
                        />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="收缩压"
                        >

                        <EditText
                            android:id="@+id/edit_systolic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:numeric="integer"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="Kpa"
                        android:textSize="@dimen/text_size"/>
                </LinearLayout>

                <!--血压-舒张压-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="舒张压"
                        >

                        <EditText
                            android:id="@+id/edit_diastolic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:numeric="integer"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="Kpa"
                        android:textSize="@dimen/text_size"/>
                </LinearLayout>

                <!--吸烟量-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="@string/smoking_amount"
                        android:textSize="@dimen/text_size"/>

                    <Spinner
                        android:id="@+id/smoking_amount_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:entries="@array/smoking_amount">

                    </Spinner>
                </LinearLayout>
                <include layout="@layout/divider_view"/>
                <!--饮酒类型-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/drinking_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="@string/drinking_type"
                        android:textSize="@dimen/text_size"/>

                    <Spinner
                        android:id="@+id/drinking_type_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:entries="@array/choose_drinking_type">

                    </Spinner>
                </LinearLayout>

                <include layout="@layout/divider_view"/>

                <!--饮酒量-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="@string/alcohol_comsuption"
                        android:textSize="@dimen/text_size"/>

                    <Spinner
                        android:id="@+id/alcohol_comsuption_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:entries="@array/drinking_amount">

                    </Spinner>
                </LinearLayout>

                <include layout="@layout/divider_view"/>
                <!--饮酒频率-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="@string/drinking_frequency"
                        android:textSize="@dimen/text_size"/>

                    <Spinner
                        android:id="@+id/drinking_frequency_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:entries="@array/choose_drinking_frequency">
                    </Spinner>
                </LinearLayout>

                <include layout="@layout/divider_view"/>

                <!--体育锻炼情况-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/exercise_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="@string/exercise_status"
                        android:textSize="@dimen/text_size"/>

                    <EditText
                        android:id="@+id/edit_exercise_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_frame"
                        android:minHeight="120dp"
                        android:gravity="start|top"
                        android:padding="@dimen/edit_padding"
                        android:textSize="@dimen/text_size"/>

                </LinearLayout>

                <!--药物过敏史-->
                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_padding"
                        android:text="药物过敏史："
                        android:textSize="@dimen/text_size"/>

                    <EditText
                        android:id="@+id/phr_allergy_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_frame"
                        android:minHeight="120dp"
                        android:padding="@dimen/edit_padding"
                        android:textSize="@dimen/text_size"/>

                </LinearLayout>
                <!--确认提交-->
                <Button
                    android:id="@+id/commit_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/edit_phr_btn_bg"
                    android:text="@string/commit_ok"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>
</LinearLayout>