<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:weightSum="1">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="确认申请"
            android:textColor="#fff"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_weight="0.10" />

    </android.support.v7.widget.Toolbar>

    <!--体检预约详情-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/healthtest_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="3.5dp"/>
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/healthtest_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                tools:text="项目2"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/healthtest_details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="2dp"
                tools:text="该体检简单描述2"
                android:textColor="#000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/healthtest_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="¥10000元"
                    android:textColor="#de0e00"
                    android:textSize="15sp"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/healthtest_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    tools:text="x1"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:maxLines="1"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--体检预约申请-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.8"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <!--体检日期选择-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/date_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:text="选择体检日期："
                            />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/healthtest_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="2017-07-25"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:padding="5dp"
                            android:background="@drawable/textview_border" />

                        <ImageView
                            android:id="@+id/input_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="center"
                            android:src="@mipmap/getdate_pic"
                            android:adjustViewBounds="true"/>
                    </LinearLayout>

                </LinearLayout>

                <!--体检时间选择-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/time_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/date_pic"
                        android:maxLines="1"
                        android:drawablePadding="9dp"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:text="体检时间：" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/healthtest_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="07:07"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:padding="5dp"
                            android:layout_marginLeft="28dp"
                            android:background="@drawable/textview_border"/>

                        <ImageView
                            android:id="@+id/input_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:src="@mipmap/gettime_pic"
                            android:adjustViewBounds="true"/>
                    </LinearLayout>


                </LinearLayout>

                <!--体检人姓名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/tester_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/phone_pic"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:text="体检人：" />

                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入就诊人姓名"
                        android:layout_marginLeft="43dp"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:background="@drawable/textview_border"
                        />

                    <ImageView
                        android:id="@+id/add_tester"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:src="@mipmap/add_pic"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"/>

                </LinearLayout>

                <!--诊疗卡号填写-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/ic_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:drawablePadding="9dp"
                        android:drawableLeft="@mipmap/phone_pic"
                        android:padding="10dp"
                        android:text="诊疗卡号："
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/input_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请输入就诊人诊疗卡号"
                        android:layout_marginLeft="28dp"
                        android:inputType="number"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:background="@drawable/textview_border"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定预约"
        android:textColor="#fff"
        android:textSize="19sp"
        android:background="@color/colorPrimary"/>
</LinearLayout>
