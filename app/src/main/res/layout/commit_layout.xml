<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="确认申请"
            android:textColor="#fff"
            android:textSize="19sp"/>

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_physical_examination"/>

    </android.support.v7.widget.Toolbar>

    <!--体检预约申请-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/healthtest_pic"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/set_pic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/healthtest_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="16sp"
                tools:text="项目2"/>

            <TextView
                android:id="@+id/healthtest_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:textColor="#000"
                android:textSize="14sp"
                tools:text="该体检简单描述2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/healthtest_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="#de0e00"
                    android:textSize="15sp"
                    tools:text="¥10000元"/>

                <TextView
                    android:id="@+id/healthtest_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="15sp"
                    tools:text="x1"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <!--体检日期-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/home_page_normal_padding"
            >

            <TextView
                android:id="@+id/date_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_physical_examination"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="选择体检日期："
                android:textColor="#000"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/healthtest_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:textSize="18sp"
                tools:text="hello"/>

            <ImageView
                android:id="@+id/input_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/ic_physical_examination"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <!--体检时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/home_page_normal_padding">

            <TextView
                android:id="@+id/time_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_physical_examination"
                android:drawablePadding="9dp"
                android:gravity="center"
                android:text="体检时间："
                android:textColor="#000"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/healthtest_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:textSize="18sp"
                tools:text="hello"/>

            <ImageView
                android:id="@+id/input_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/ic_physical_examination"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <!--体检人-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/home_page_normal_padding">

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_physical_examination"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="体检人："
                android:textColor="#000"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:hint="请输入就诊人姓名"
                android:textSize="15sp"
                />

            <ImageView
                android:id="@+id/add_tester"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/ic_physical_examination"/>

        </LinearLayout>

        <!--诊疗卡号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/home_page_normal_padding">

            <TextView
                android:id="@+id/verify_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_physical_examination"
                android:drawablePadding="9dp"
                android:gravity="center"
                android:text="诊疗卡号："
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/input_verify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:hint="请输入就诊人诊疗卡号"
                android:inputType="number"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="确定预约"
        android:textColor="#fff"
        android:textSize="19sp"/>
</LinearLayout>
