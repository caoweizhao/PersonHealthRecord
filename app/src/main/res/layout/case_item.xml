<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_margin_vertical"
    android:layout_marginLeft="@dimen/card_view_margin_horizontal"
    android:layout_marginRight="@dimen/card_view_margin_horizontal"
    android:layout_marginTop="@dimen/card_view_margin_vertical"
    app:cardCornerRadius="@dimen/card_corner"
    app:cardElevation="@dimen/card_view_elevation"
    >

    <LinearLayout
        android:id="@+id/abstract_item__layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/case_item__img"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1.2"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_case"
            />

        <include
            layout="@layout/divider_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <!--title-->
            <TextView
                android:id="@+id/case_item__title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="@dimen/text_size"
                tools:text="病历1"
                />

            <!--就诊医院-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="就诊医院："
                    />

                <TextView
                    android:id="@+id/case_item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="5dp"
                    tools:text="中山三院"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="就诊时间："
                    />

                <TextView
                    android:id="@+id/case_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="5dp"
                    tools:text="2017-08-05"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

