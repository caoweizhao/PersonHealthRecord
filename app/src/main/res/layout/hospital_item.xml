<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abstract_item__layout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2dp"
    android:background="#ccc"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/hospital_item__img"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher_round"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:padding="@dimen/home_page_normal_padding"
        >


        <TextView
            android:id="@+id/hospital_item__name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            tools:text="中山大学第三附属医院（天河院区）"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/hospital_item_clazz"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/class_a_bg"
            android:gravity="center_vertical"
            android:textColor="@color/class_a_color"
            android:text="一级甲等"
            />

        <TextView
            android:id="@+id/hospital_item_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="广州市天河区天河路600号"
            android:textColor="#9c9999"
            />

    </LinearLayout>
</LinearLayout>