<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.example.administrator.personhealthrecord.view.WaveImageView
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/runing"
        android:id="@+id/manual_evaluate_iamge_score"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:clipChildren="false"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!--体重指数-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="体重指数："
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/phr_body_mass_index"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>

                        <TextView
                            android:id="@+id/phr_body_mass_index_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>
                    <!--身高-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="身高："
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/phr_tall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="厘米"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>
                    <!--体重-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/text_padding"
                            android:text="体重："
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/phr_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>
                    <!--血型-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/text_padding"
                            android:text="血型："
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/blood_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>
                    <!--心率-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/text_padding"
                            android:text="心率"
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/heart_rate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="bpm"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>
                    <!--血压-收缩压-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:id="@+id/blood_pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="@string/blood_pressure"
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/phr_systolic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingRight="20dp"
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="kPa(收缩压)"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>
                    <!--血压-舒张压-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        >

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            />

                        <TextView
                            android:id="@+id/phr_diastolic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingRight="20dp"
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="kPa(舒张压)"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>
                    <!--吸烟量-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="吸烟量："
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/phr_smoking_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>

                    <!--饮酒类型-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="饮酒类型："
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/drinking_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>

                    <!--饮酒量-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="饮酒量："
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/drinking_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>

                    <!--饮酒频率-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="饮酒频率："
                            android:textSize="@dimen/text_size"
                            />

                        <TextView
                            android:id="@+id/drinking_frequency"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="@dimen/text_padding"
                            android:textSize="@dimen/text_size"/>
                    </LinearLayout>

                    <include layout="@layout/divider_view"/>

                    <!--体育锻炼情况-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="@string/exercise_status"
                            android:textSize="@dimen/text_size"/>

                        <TextView
                            android:id="@+id/phr_exercise_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_frame"
                            android:minHeight="120dp"
                            android:padding="@dimen/edit_padding"
                            android:textSize="@dimen/text_size"/>

                    </LinearLayout>

                    <!--药物过敏史-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="药物过敏史："
                            android:textSize="@dimen/text_size"/>

                        <TextView
                            android:id="@+id/phr_allergy_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_frame"
                            android:minHeight="120dp"
                            android:padding="@dimen/edit_padding"
                            android:textSize="@dimen/text_size"/>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>
</FrameLayout>

</LinearLayout>